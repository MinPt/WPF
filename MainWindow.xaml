<Window x:Class="WPFLabies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLabies"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
  <StackPanel>
      <StackPanel Orientation="Horizontal">
          <TextBlock>Choose your destiny</TextBlock>
          <ListBox x:Name="MyListBox" Margin="10">
              <ListBoxItem>Earth</ListBoxItem>
              <ListBoxItem>Water</ListBoxItem>
              <ListBoxItem>Fire</ListBoxItem>
              <ListBoxItem>Air</ListBoxItem>
          </ListBox>
      </StackPanel>
      <StackPanel >
          <CheckBox x:Name="CheckBox1">LastName</CheckBox>
          <CheckBox x:Name="CheckBox2">FirsName</CheckBox>
          <CheckBox x:Name="CheckBox3" IsChecked="True">ThirdName</CheckBox>
      </StackPanel>
      <Button Click="ButtonBase_OnClick">Checkout</Button>
  </StackPanel>
</Window>
